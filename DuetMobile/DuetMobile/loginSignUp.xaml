<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuetMobile.loginSignUp"
              BackgroundColor="#9DC3E7"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Welcome To Duet!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   TextColor= "Black"
                   />
            <Label Text="Find someone you vibe with. "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   TextColor= "Black"
                   />
            <!--Enter User name-->
            <Entry x:Name="username" Placeholder="User Name" BackgroundColor="Beige" />
            <!--Enter Password -->
            <Entry x:Name="password" IsPassword="True" Placeholder="Password" BackgroundColor="Beige" />

            <Button x:Name="Enter" Text="Sign In" Clicked="Enter_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>