<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuetMobile.usersProfile">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Profile"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Upload a Photo" Clicked="uploadPhoto"/>
            <Label Text="Interests:"  />

            <Button Text="Change my interests" Clicked="changeInterests" />

            <Button Text="Find a Duet"  Clicked="findPeople"/>
          
            <Button Text="My Duets" Clicked="matches" />



        </StackLayout>
    </ContentPage.Content>
</ContentPage>